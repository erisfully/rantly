<%= render 'layouts/header' %>

<div style="text-align: center; margin: 1em">
  <%= form_tag :admin_rants, method: 'get' do %>
  <%= text_field_tag :starts_on, nil, :class => 'datepicker' %>
  To
  <%= text_field_tag :ends_on, nil, :class => 'datepicker' %>
  <%= submit_tag "Filter" %>
    <% end %>
</div>

<table class="admin-table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Title</th>
    <th>Actions</th>
  </tr>
  <% @rants.each do |rant| %>
    <tr>
      <td><%= rant.user.first_name + " " + rant.user.last_name %></td>
      <td><%= rant.user.email %></td>
      <td><%= rant.topic %></td>
      <td><%= rant.created_at %></td>
    </tr>
  <% end %>
</table>